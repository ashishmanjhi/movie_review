
<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @movie.image.url(:medium) %>
         <%= @avg_review %> 
         <em><%= "#{@review.length} reviews" %></em>
        <div class="table-responsive">
          <table class="table">
            <tbody>
             <tr>
               <td><strong>Title</strong></td>
               <td><%= @movie.title %></td>
             </tr>
             <tr>
              <td><strong>Description:</strong></td>
              <td><%= @movie.description %></td>
             </tr>
             <tr>
              <td><strong>Movie length:</strong></td>
              <td><%= @movie.movie_length %></td>
             </tr>
             <tr>
              <td><strong>Director:</strong></td>
              <td><%= @movie.director %></td>
             </tr>
             <tr>
              <td><strong>Rating:</strong></td>
              <td><%= @movie.rating %></td>
             </tr>
            </tbody>
          </table>
          <%= link_to 'Write a Review', new_movie_review_path(@movie) %>
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1">
        <h1 class="review_title"><%= @movie.title %></h1>
        <p><%= @movie.description %></p>
        <% if @review.blank? %>
          <h1>NO reviews yet, would you like to add </h1>
          <%= link_to "Write Review", new_movie_review_path(@movie), class: "btn btn-danger" %>
        <% else %>
          <% @review.each do |review| %>
            <div class="review">
              <%= review.rating %><div class="star-rating" data-score= <%= review.rating %>  ></div>
              <%= review.comment %>
            </div>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>  
</div>



<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>


<script>
    $('.star-rating').raty({
      path: '/javascript/',
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });
</script>